@* _Layout.cshtml *@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Mi Proyecto</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />

    <!-- Site.css -->
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            background-color: #f8f9fa;
            margin-bottom: 70px; /* espacio para widget */
        }

        /* Navbar */
        .navbar-brand {
            font-weight: bold;
            font-size: 1.3rem;
        }

        .nav-link {
            transition: 0.3s;
        }

            .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.1);
                border-radius: 5px;
            }

        /* Widget fecha/hora fijo */
        #datetime-widget {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: #343a40;
            color: #fff;
            padding: 12px 18px;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.3);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 1rem;
            z-index: 1050;
            user-select: none;
            min-width: 170px;
            text-align: center;
            transition: all 0.3s ease;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="fas fa-graduation-cap me-2"></i> Mi Proyecto
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i> Inicio
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido Principal -->
    <div class="container my-4">
        @RenderBody()
    </div>

    <!-- Widget fecha y hora -->
    <div id="datetime-widget">
        <div id="date"></div>
        <div id="time"></div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Actualiza fecha y hora
        function updateDateTime() {
            const now = new Date();

            const optionsDate = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            const locale = 'es-ES';

            const formattedDate = now.toLocaleDateString(locale, optionsDate);
            document.getElementById('date').textContent = formattedDate.charAt(0).toUpperCase() + formattedDate.slice(1);

            const formattedTime = now.toLocaleTimeString(locale, { hour12: false });
            document.getElementById('time').textContent = formattedTime;
        }

        // Ajustar tamaño widget según ventana (simula media queries)
        function ajustarWidget() {
            const widget = document.getElementById('datetime-widget');
            if (window.innerWidth <= 576) {
                widget.style.bottom = '10px';
                widget.style.right = '10px';
                widget.style.padding = '8px 12px';
                widget.style.fontSize = '0.85rem';
                widget.style.minWidth = '140px';
            } else {
                widget.style.bottom = '20px';
                widget.style.right = '20px';
                widget.style.padding = '12px 18px';
                widget.style.fontSize = '1rem';
                widget.style.minWidth = '170px';
            }
        }

        // Inicializar y configurar eventos
        updateDateTime();
        ajustarWidget();
        setInterval(updateDateTime, 1000);
        window.addEventListener('resize', ajustarWidget);
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
