@model IEnumerable<TuProyecto.Models.Estudiante>
@{
    ViewData["Title"] = "Lista de Estudiantes";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">
        <i class="fas fa-users"></i> Lista de Estudiantes
    </h2>

    <!-- Barra de búsqueda -->
    <div class="row mb-3">
        <div class="col-md-6 mx-auto">
            <input type="text" id="searchInput" class="form-control" placeholder="🔍 Buscar estudiante...">
        </div>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-primary text-center">
                <tr>
                    <th>ID</th>
                    <th>Nombre Completo</th>
                    <th>Edad</th>
                    <th>Correo</th>
                    <th>Fecha Registro</th>
                </tr>
            </thead>
            <tbody id="studentTable">
                @if (Model != null && Model.Any())
                {
                    foreach (var estudiante in Model)
                    {
                        <tr>
                            <td class="text-center fw-bold">@estudiante.Id</td>
                            <td>@estudiante.Nombre @estudiante.Apellido</td>
                            <td class="text-center">@estudiante.Edad</td>
                            <td>@estudiante.Correo</td>
                            <td class="text-center">@estudiante.FechaRegistro.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">No hay estudiantes registrados</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Script de búsqueda rápida -->
<script>
    document.getElementById("searchInput").addEventListener("keyup", function () {
        let filter = this.value.toLowerCase();
        let rows = document.querySelectorAll("#studentTable tr");

        rows.forEach(row => {
            let text = row.textContent.toLowerCase();
            row.style.display = text.includes(filter) ? "" : "none";
        });
    });
</script>
