@model IEnumerable<TuProyecto.Models.Estudiante>
@{
    ViewData["Title"] = "Lista de Estudiantes";
}

<h2 class="text-center mt-4">Lista de Estudiantes</h2>
<div class="container mt-4">
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Edad</th>
                    <th>Correo</th>
                    <th>Fecha Registro</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var estudiante in Model)
                {
                    <tr>
                        <td>@estudiante.Id</td>
                        <td>@estudiante.Nombre</td>
                        <td>@estudiante.Apellido</td>
                        <td>@estudiante.Edad</td>
                        <td>@estudiante.Correo</td>
                        <td>@estudiante.FechaRegistro.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>