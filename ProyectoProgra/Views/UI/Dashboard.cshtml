@{
    ViewData["Title"] = "Dashboard";
}

<div class="container my-4">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold">Panel de Control</h1>
        <p class="lead">Bienvenido al dashboard. Aquí verás tus estadísticas y reportes.</p>
    </div>

    <div class="row g-4">
        <!-- Tarjeta 1 -->
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow-sm border-0 h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Usuarios</h5>
                    <p class="card-text fs-4 fw-bold text-primary">125</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta 2 -->
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow-sm border-0 h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Ventas</h5>
                    <p class="card-text fs-4 fw-bold text-success">$5,230</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta 3 -->
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow-sm border-0 h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Pedidos</h5>
                    <p class="card-text fs-4 fw-bold text-warning">89</p>
                </div>
            </div>
        </div>

        <!-- Tarjeta 4 -->
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card shadow-sm border-0 h-100 text-center">
                <div class="card-body">
                    <h5 class="card-title">Soporte</h5>
                    <p class="card-text fs-4 fw-bold text-danger">12</p>
                </div>
            </div>
        </div>
    </div>
</div>
