@model TuProyecto.Models.Estudiante
@{
    ViewData["Title"] = "Registrar Estudiante";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Registro de Estudiante</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="RegistroEstudiantes" asp-controller="RegistroEstudiantes" method="post" class="needs-validation">
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-bold"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Apellido" class="form-label fw-bold"></label>
                    <input asp-for="Apellido" class="form-control" placeholder="Ingrese apellido" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Edad" class="form-label fw-bold"></label>
                    <input asp-for="Edad" type="number" class="form-control" placeholder="Ingrese edad" />
                    <span asp-validation-for="Edad" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Correo" class="form-label fw-bold"></label>
                    <input asp-for="Correo" type="email" class="form-control" placeholder="Ingrese correo electrónico" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success px-5">Registrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
