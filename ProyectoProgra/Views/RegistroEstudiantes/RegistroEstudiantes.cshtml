@model TuProyecto.Models.Estudiante
@{
    ViewData["Title"] = "Registro de Estudiantes";
}

<div class="container-fluid mt-4" style="max-width: 800px;">
    <h2 class="text-center mb-4">Registro de Estudiantes</h2>

    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <form asp-action="RegistroEstudiantes" method="post" class="card p-4 shadow border-0 rounded-4 bg-light">

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-bold"></label>
                    <input asp-for="Nombre" class="form-control" aria-label="Nombre del estudiante" placeholder="Ingrese el nombre" />
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Apellido" class="form-label fw-bold"></label>
                    <input asp-for="Apellido" class="form-control" aria-label="Apellido del estudiante" placeholder="Ingrese el apellido" />
                    <span asp-validation-for="Apellido" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Edad" class="form-label fw-bold"></label>
                    <input asp-for="Edad" class="form-control" type="number" aria-label="Edad del estudiante" placeholder="Ej: 20" min="0" />
                    <span asp-validation-for="Edad" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Correo" class="form-label fw-bold"></label>
                    <input asp-for="Correo" class="form-control" type="email" aria-label="Correo del estudiante" placeholder="ejemplo@correo.com" />
                    <span asp-validation-for="Correo" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2">
                    <i class="bi bi-person-plus-fill me-2"></i> Registrar
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
