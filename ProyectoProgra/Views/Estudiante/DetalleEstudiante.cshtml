@{
    ViewData["Title"] = "Detalle Estudiante";
}

<div class="container mt-4" style="max-width: 800px;">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card shadow-sm border-0 rounded-4 bg-light p-4">
                <h2 class="text-center mb-3">Detalle del Estudiante</h2>
                <p class="text-center text-muted">
                    Mostrando detalles del estudiante con
                    <span class="fw-bold">ID: @ViewBag.Id</span>
                </p>
                <div class="text-center mt-3">
                    <div class="col-md-4">
                        <a asp-controller="RegistroEstudiantes" asp-action="ListaEstudiante" class="btn btn-secondary w-100 py-3">
                            <i class="fas fa-list fa-lg"></i> Lista de Estudiantes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

