@{
    ViewData["Title"] = "Estudiante";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Gestión de Estudiantes</h2>

    <div class="row g-3">
        <div class="col-md-3">
            <a asp-action="BuscarEstudiante" class="btn btn-primary w-100 py-3">
                <i class="fas fa-search"></i> Buscar
            </a>
        </div>

        <div class="col-md-3">
            <a asp-action="DetalleEstudiante" asp-route-id="1" class="btn btn-info w-100 py-3">
                <i class="fas fa-info-circle"></i> Detalle
            </a>
        </div>

        <div class="col-md-3">
            <a asp-action="EditarEstudiante" asp-route-id="1" class="btn btn-warning w-100 py-3">
                <i class="fas fa-edit"></i> Editar
            </a>
        </div>

        <div class="col-md-3">
            <a asp-action="EliminarEstudiante" asp-route-id="1" class="btn btn-danger w-100 py-3">
                <i class="fas fa-trash"></i> Eliminar
            </a>
        </div>
    </div>
</div>
