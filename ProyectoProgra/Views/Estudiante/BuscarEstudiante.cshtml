@{
    ViewData["Title"] = "Buscar Estudiante";
}

<div class="container mt-4" style="max-width: 700px;">
    <h2 class="text-center mb-4">Buscar Estudiante</h2>

    <form method="get" class="card p-4 shadow-sm border-0 bg-light rounded-4">
        <div class="row g-3 align-items-end">
            <div class="col-12 col-md-8">
                <label for="nombre" class="form-label fw-bold">Nombre</label>
                <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Ingrese el nombre" aria-label="Nombre del estudiante" />
            </div>
            <div class="col-12 col-md-4">
                <button type="submit" class="btn btn-primary w-100 py-2">
                    <i class="bi bi-search me-2"></i> Buscar
                </button>
            </div>
        </div>
    </form>
</div>
